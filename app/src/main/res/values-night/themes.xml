<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.FellowshipFungi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/brown1</item>
        <item name="colorPrimaryVariant">@color/green1</item>
        <item name="colorOnPrimary">@color/white2</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/black1</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white1</item>
        <item name="android:textColorSecondary">@color/black2</item>
        <item name="android:textColorTertiary">@color/white2</item>

        <!-- Button colors -->
        <item name="colorButtonNormal">@color/green1</item>
        <item name="colorControlActivated">@color/red1</item>
    </style>
    <style name="Button.FellowshipFungi" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Button.FellowshipFungi.Yes" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Button.FellowshipFungi.No" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorControlActivated</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="H1.FellowshipFungi" parent="Base.Theme.FellowshipFungi">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.FellowshipFungi" parent="Base.Theme.FellowshipFungi" />

</resources>
