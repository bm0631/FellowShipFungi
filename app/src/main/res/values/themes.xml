<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FellowshipFungi" parent="Theme.MaterialComponents.Light.DarkActionBar">


        <item name="colorPrimary">@color/brown2</item>
        <item name="colorPrimaryVariant">@color/brown3</item>
        <item name="colorOnPrimary">@color/black1</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/white1</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black2</item>
        <item name="android:textColorSecondary">@color/white1</item>
        <item name="android:textColorTertiary">@color/gray2</item>

        <!-- Button colors -->
        <item name="colorButtonNormal">@color/green2</item>
        <item name="colorControlActivated">@color/red2</item>


    </style>

    <style name="Button.FellowshipFungi" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Button.FellowshipFungi.Yes" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorButtonNormal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Button.FellowshipFungi.No" parent="Base.Theme.FellowshipFungi">
        <item name="android:background">?attr/colorControlActivated</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="H1.FellowshipFungi" parent="Base.Theme.FellowshipFungi">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.FellowshipFungi" parent="Base.Theme.FellowshipFungi" />

</resources>